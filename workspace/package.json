{
  "author": "Antonio De Luca <contact@antoniodeluca.info>",
  "description": "DN2A - Dynamic Neural Networks Architecture - Workspace",
  "license": "MIT",
  "name": "dn2a-workspace",
  "scripts": {
    "format": "prettier ./assets/**/*.{ts,tsx} ./public/**/*.{html,css} ./tests/**/*.{ts,tsx} --write",
    "lint": "eslint ./assets/**/*.{ts,tsx} ./tests/**/*.{ts,tsx}",
    "start:client": "npx parcel ./public/index.html",
    "start:server": "npx ts-node ./assets/server/index.ts",
    "start:server:mocks": "npx json-server --watch --port=3000 ./tests/mocks/api.json",
    "test": "npm run test:client:unit && npm run test:client:acceptance && npm run test:server:unit && npm run test:server:acceptance",
    "test:client:acceptance": "npx jest --verbose ./tests/acceptance/client/*",
    "test:client:unit": "npx jest --verbose ./tests/unit/client/*",
    "test:server:acceptance": "npx jest --verbose ./tests/acceptance/server/*",
    "test:server:unit": "npx jest --verbose ./tests/unit/server/*"
  },
  "version": "0.1.0",
  "devDependencies": {
    "@parcel/plugin": "^2.8.3",
    "@parcel/transformer-typescript-types": "^2.8.3",
    "@testing-library/jest-dom": "^5.16.5",
    "@testing-library/react": "^13.4.0",
    "@testing-library/user-event": "^14.4.3",
    "@trivago/prettier-plugin-sort-imports": "^4.0.0",
    "@types/express": "^4.17.15",
    "@types/jest": "^29.4.0",
    "@types/ramda": "^0.28.22",
    "@types/react": "^18.0.27",
    "@types/react-dom": "^18.0.10",
    "@typescript-eslint/eslint-plugin": "^5.49.0",
    "@typescript-eslint/parser": "^5.49.0",
    "eslint-config-prettier": "^8.6.0",
    "eslint-plugin-import": "^2.27.5",
    "eslint-plugin-jsx-a11y": "^6.7.1",
    "eslint-plugin-react": "^7.32.1",
    "eslint-plugin-react-hooks": "^4.6.0",
    "express": "^4.18.2",
    "jest": "^29.4.0",
    "jest-css-modules": "^2.1.0",
    "jest-environment-jsdom": "^29.4.0",
    "json-server": "^0.17.1",
    "parcel": "^2.8.3",
    "parcel-resolver-ts-base-url": "^1.3.1",
    "prettier": "^2.8.3",
    "primeflex": "^3.3.0",
    "primeicons": "^6.0.1",
    "primereact": "^8.7.3",
    "process": "^0.11.10",
    "ramda": "^0.28.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "react-router-dom": "^6.8.0",
    "rxjs": "^7.8.0",
    "ts-jest": "^29.0.5",
    "ts-node": "^10.9.1",
    "typescript": "^4.9.4"
  }
}
